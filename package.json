{
  "name": "grocerylist",
  "version": "1.0.0",
  "main": "main.js",
  "type": "commonjs",
  "description": "Grocery List Desktop App",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "electron": "electron .",
    "dev": "concurrently \"npm run electron\" \"cd grocery-ui && npm run dev\"",
    "build": "cd grocery-ui && npm run build",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.yourdomain.grocerylist",
    "productName": "Grocery List",
    "files": [
      "main.js",
      "grocery-ui/dist/**",
      "grocery-backend/**",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "ai": "^4.3.15",
    "electron-store": "^10.0.1",
    "open": "^10.1.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12"
  }
}